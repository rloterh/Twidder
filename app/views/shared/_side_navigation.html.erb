        <%= gravatar_for current_user, size: 50 %>
      <% else %>
        <%= image_tag current_user.photo.thumb.url %>
      <% end %> 
      </picture>
      <h5 class="text-white"><%= current_user.fullname %></h5>
    </div>

    <div class="d-flex align-items-center sb-followinfo">
      <div class="flex-fill d-flex flex-column align-items-center justify-content-center following-sbdiv">
        <h6 class="pt-3"><%= current_user.followed.size %></h6>
        <h6 class="pb-3">following</h6>
      </div>
      <div class="flex-fill d-flex flex-column align-items-center justify-content-center">
        <h6 class="pt-3"><%= current_user.followers.size %></h6>
        <h6 class="pb-3">followers</h6>
      </div>
    </div>

    <ul class="sidebar-nav text-capitalize">
      <li class="sidebar-item active">
        <%= link_to root_path, class:'d-inline' do %>
        <div class="sidebar-link">
          <i class="align-middle" data-feather="home"></i> 
          <span class="align-middle d-inline">home</span>
        </div>
        <% end %>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link">
          <i class="align-middle" data-feather="at-sign"></i> <span class="align-middle">connect</span>
        </a>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link">
          <i class="align-middle" data-feather="hash"></i> <span class="align-middle">discover</span>
        </a>
      </li>

      <li class="sidebar-item">
        <%= link_to user_path(current_user.id) do %>
        <div class="sidebar-link">
          <i class="align-middle" data-feather="user"></i> 
          <span class="align-middle">profile</span>
        </div>
        <% end %>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link">
          <i class="align-middle" data-feather="bar-chart-2"></i> <span class="align-middle">statistics</span>
        </a>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link">
          <i class="align-middle" data-feather="more-horizontal"></i> <span class="align-middle">more</span>
        </a>
      </li>
    </ul>
  </div>
</nav>
